<%- include("partials/header") -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group"><label for="newPostTitle">Title</label>
            <input type="text" class="form-control" name="newPostTitle">
        </div>
        <div class="form-group"><label for="newPost">Post</label>
            <textarea name="newPost" class="form-control" rows="10"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" value="Publish">Publish</button>
    </form>
    <%- include("partials/footer") -%>